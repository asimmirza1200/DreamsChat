<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:weightSum="2">

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Comments"
            android:layout_marginTop="5dp"
            android:textColor="#111111"
            android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/Reviews"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_red_border"
        android:hint="Enter Review"
      android:layout_margin="10dp"
        android:textAlignment="center"
        android:singleLine="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Donate Icon"
            android:textColor="#111111"
            android:layout_marginStart="20dp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:id="@+id/radiogroup"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/text4"

            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="star"
            android:textColor="@android:color/transparent"
            android:background="@drawable/starselecter"
            android:button="@null"

            android:textSize="18sp" />
            <RadioButton
                android:id="@+id/text1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:checked="false"
                android:text="apple"
                android:textColor="@android:color/transparent"
                android:layout_gravity="center"
                android:background="@drawable/appletselecter"
                android:button="@null"

                android:textSize="18sp" />
            <RadioButton
                android:id="@+id/text2"

                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="heart"
                android:textColor="@android:color/transparent"                android:checked="false"

                android:background="@drawable/heartselecter"
                android:button="@null"
                android:textSize="18sp" />
            <RadioButton
                android:id="@+id/text3"

                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="flame"
                android:textColor="@android:color/transparent"                android:checked="false"
                android:background="@drawable/fireselecter"
                android:button="@null"
                android:textSize="18sp" />
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="#111111"
            android:layout_marginStart="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:paddingStart="20dp"
            android:id="@+id/rating"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_red_border"
            android:textColor="#111111" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Donate"
                android:id="@+id/donate"
                android:gravity="center"
                android:layout_gravity="end"
                android:background="@drawable/button"
                android:textColor="#111111" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>